<Window x:Class="networking2.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="173" Width="300">
    <Grid Height="127" Width="277">
        <TextBox Height="30" HorizontalAlignment="Left" Margin="12,41,0,0" Name="directoryname" VerticalAlignment="Top" Width="240" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Enter the name of the new directory:" VerticalAlignment="Top" Width="222" FontWeight="Bold" />
        <Button Content="Submit" Height="29" HorizontalAlignment="Left" Margin="40,93,0,0" Name="Submit" VerticalAlignment="Top" Width="75" Click="Submit_Click" />
        <Button Content="Close" Height="29" HorizontalAlignment="Left" Margin="147,93,0,0" Name="input_cancel" VerticalAlignment="Top" Width="75" Click="input_cancel_Click" />
    </Grid>
</Window>
